<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/yellow</item>
        <item name="colorPrimaryVariant">@color/yellow</item>
        <item name="colorOnPrimary">@color/yellow</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="KakaoEditTextStyle">
        <item name="colorAccent">@color/yellow</item>
        <item name="colorControlNormal">@color/gray_ce</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/gray_ce</item>
        <item name="android:fontFamily">@font/kakao_regular</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="fadeScrollView" >
        <item name="android:background">@color/white</item>
        <item name="android:requiresFadingEdge">vertical</item>
        <item name="android:fadingMode">fade_in</item>
        <item name="android:fadingEdgeLength">14dp</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:fillViewport">true</item>
        <item name="android:overScrollMode">never</item>
    </style>

    <style name="MainTab" parent="Widget.Design.TabLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@color/white</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:overScrollMode">never</item>
        <item name="android:scrollbars">none</item>
        <item name="tabIndicatorFullWidth">false</item>
        <item name="tabPaddingStart">0dp</item>
        <item name="tabPaddingEnd">0dp</item>
        <item name="tabMode">scrollable</item>
        <item name="tabGravity">fill</item>
        <item name="tabPaddingTop">10dp</item>
        <item name="tabTextAppearance">@style/tab_text</item>
        <item name="tabIndicator">@color/yellow</item>
        <item name="tabIndicatorHeight">4dp</item>
        <item name="tabTextColor">@color/gray_88</item>
        <item name="tabIndicatorColor">@color/yellow</item>
        <item name="tabSelectedTextColor">@color/yellow</item>
        <item name="tabRippleColor">@null</item>
    </style>

    <style name="tab_text">
        <item name="android:fontFamily">@font/kakao_regular</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">15dp</item>
    </style>

    <style name="IntegrateSearchTitle">
        <item name="android:fontFamily">@font/kakao_regular</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="KakaoBoldFont" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/kakao_bold</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="KakaoRegularFont" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/kakao_regular</item>
        <item name="android:includeFontPadding">false</item>
    </style>

</resources>